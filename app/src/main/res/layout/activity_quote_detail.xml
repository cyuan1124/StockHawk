<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sam_chordas.android.stockhawk.ui.QuoteDetailActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout"
        android:background="?attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:layout_weight="1" />

    <android.support.v7.widget.GridLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="2">

        <TextView
            android:id="@+id/date"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="?android:textColorPrimary"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"
            tools:text="Today, April 03" />

        <TextView
            android:layout_width="0dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:text="@string/detail_open"
            android:textAllCaps="true"
            android:textColor="?android:textColorPrimary"
            android:textSize="18sp"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal" />

        <TextView
            android:layout_width="0dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="@string/detail_high"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="?android:textColorPrimary"
            android:textSize="18sp"
            app:layout_columnWeight="1" />

        <TextView
            android:id="@+id/open"
            android:layout_width="0dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:textColor="?android:textColorPrimary"
            android:textSize="24sp"
            app:layout_columnWeight="1"
            tools:text="10" />

        <TextView
            android:id="@+id/high"
            android:layout_width="0dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:textColor="?android:textColorPrimary"
            android:textSize="24sp"
            app:layout_columnWeight="1"
            tools:text="10" />

        <TextView
            android:layout_width="0dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:text="@string/detail_close"
            android:textAllCaps="true"
            android:textColor="?android:textColorPrimary"
            android:textSize="18sp"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal" />

        <TextView
            android:layout_width="0dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="@string/detail_high"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="?android:textColorPrimary"
            android:textSize="18sp"
            app:layout_columnWeight="1" />

        <TextView
            android:id="@+id/close"
            android:layout_width="0dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:textColor="?android:textColorPrimary"
            android:textSize="24sp"
            app:layout_columnWeight="1"
            tools:text="10" />

        <TextView
            android:id="@+id/low"
            android:layout_width="0dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:textColor="?android:textColorPrimary"
            android:textSize="24sp"
            app:layout_columnWeight="1"
            tools:text="10" />

    </android.support.v7.widget.GridLayout>
</LinearLayout>
